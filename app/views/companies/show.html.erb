          <div class="col-xs-6 ceo_box">
            <div class="company_item company_zastupnici">
                <span class="glyphicon glyphicon-user"></span> Zastupnici<br>
                <% unless @company.zastupnici == nil %>
                    <% @zastupnici = Hash[@company.zastupnici.each_slice(2).to_a] %>
                    <% @zastupnici.each_with_index do |(key,value), index| %>
                    <div class="red">
                        <div class="broj"><%= "#{index + 1}." %></div>
                        <div class="ime_i_prezime"><%= key.to_s %></div>
                        <% if logged_in? %>    
                            <div class="jmbg"> <%= value.to_s  %><br></div> 
                        <% else %>
